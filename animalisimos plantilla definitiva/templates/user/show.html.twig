{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
{% include "navadmin/navadmin.html.twig" %}

    <div class="col-7 mt-4">
    <h2>Usuario</h2>
    <div class="row">
    <div class="col-7 mt-2 text-left">
    <table class="table  table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Dni</th>
                <td>{{ user.dni }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ user.nombre }}</td>
            </tr>
            <tr>
                <th>Apellido1</th>
                <td>{{ user.apellido1 }}</td>
            </tr>
            <tr>
                <th>Apellido2</th>
                <td>{{ user.apellido2 }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ user.telefono }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
             <tr>
                <th>Editar</th>
                <td> <a href="{{ path('user_edit', {'id': user.id}) }}"><i class="far fa-edit"></i></a></td>
            </tr>
            <tr>
                <th>Borrar</th>
                <td>{{ include('user/_delete_form.html.twig') }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}"><i class="fas fa-arrow-alt-circle-left"></i>Volver a Lista</a>
</div>
    </div>
    </div>
    
{% endblock %}

