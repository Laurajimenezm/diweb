{% extends 'base.html.twig' %}

{% block title %}Gestion Animales{% endblock %}

{% block body %}

    {% include "navadmin/navadmin.html.twig" %}

  
    <div class="col-7 mt-5">

    <h2>Gestion Tipo Animal</h2>
    
    <table class="table table-hover">
        <thead class="bg-primary">
            <tr class="color">
                <th>Id</th>
                <th>Nombre</th>
                <th>Ver</th>
                <th>Editar</th>
                <th>Crear nuevo</th>
